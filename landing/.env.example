# App Config
NEXT_PUBLIC_APP_NAME=Shira
NEXT_PUBLIC_APP_URL=https://shira.co.il
NEXT_PUBLIC_APP_ENV=development

# Backend API
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Video CDN
NEXT_PUBLIC_CDN_URL=https://d2v9k5u4v94ulw.cloudfront.net
NEXT_PUBLIC_VIDEO_DOMAIN=shira-videos.s3.amazonaws.com

# Payment Gateway - Tranzila
NEXT_PUBLIC_TRANZILA_TERMINAL_ID=your_terminal_id
TRANZILA_API_KEY=your_api_key_here

# Payment Gateway - Cardcom (Alternative)
NEXT_PUBLIC_CARDCOM_TERMINAL_ID=your_terminal_id
CARDCOM_API_KEY=your_api_key_here

# Invoicing - GreenInvoice
GREENINVOICE_API_KEY=your_api_key_here
GREENINVOICE_API_SECRET=your_api_secret_here
GREENINVOICE_ENV=sandbox

# Analytics - GA4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Analytics - GTM
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Analytics - Meta Pixel
NEXT_PUBLIC_META_PIXEL_ID=1234567890

# Analytics - TikTok Pixel
NEXT_PUBLIC_TIKTOK_PIXEL_ID=XXXXXXXXXXXXXXX

# DRM & Security
DRM_KEY_SERVER_URL=https://drm.shira.co.il
DRM_ENCRYPTION_KEY=your_encryption_key_here

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
