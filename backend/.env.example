# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shira_streaming
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres
DB_POOL_MAX=20
DB_POOL_MIN=5

# Database - MongoDB (Analytics & Logs)
MONGO_URI=mongodb://localhost:27017/shira_analytics
MONGO_USER=
MONGO_PASSWORD=

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRY=30d

# AWS S3 Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_VIDEO=shira-videos
S3_BUCKET_THUMBNAILS=shira-thumbnails
S3_BUCKET_TEMP=shira-temp

# AWS CloudFront CDN
CLOUDFRONT_DOMAIN=your_cloudfront_domain.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your_key_pair_id
CLOUDFRONT_PRIVATE_KEY_PATH=./keys/cloudfront-private-key.pem

# Video Transcoding
TRANSCODING_SERVICE=aws_mediaconvert
# Options: aws_mediaconvert, coconut, custom
AWS_MEDIACONVERT_ENDPOINT=
AWS_MEDIACONVERT_ROLE=
COCONUT_API_KEY=

# DRM (Digital Rights Management)
DRM_PROVIDER=buydrm
# Options: buydrm, ezdrm, custom
FAIRPLAY_CERTIFICATE_URL=
FAIRPLAY_KEY_SERVER_URL=
WIDEVINE_PROVIDER=
WIDEVINE_LICENSE_URL=

# Apple In-App Purchases
APPLE_BUNDLE_ID=com.shira.streaming
APPLE_SHARED_SECRET=your_apple_shared_secret
APPLE_TEAM_ID=your_team_id
APPLE_KEY_ID=your_key_id
APPLE_PRIVATE_KEY_PATH=./keys/apple-private-key.p8

# Google Play Billing
GOOGLE_PACKAGE_NAME=com.shira.streaming
GOOGLE_SERVICE_ACCOUNT_PATH=./keys/google-service-account.json
GOOGLE_PLAY_CONSOLE_API_KEY=

# Stripe (Web Payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Israeli PSP - Tranzila
TRANZILA_TERMINAL_NAME=your_terminal_name
TRANZILA_TERMINAL_PASSWORD=your_terminal_password
TRANZILA_BASE_URL=https://direct.tranzila.com

# Israeli Invoicing - GreenInvoice
GREENINVOICE_API_KEY=your_api_key
GREENINVOICE_API_SECRET=your_api_secret
GREENINVOICE_BUSINESS_ID=your_business_id
GREENINVOICE_BASE_URL=https://api.greeninvoice.co.il

# Frontend URLs
FRONTEND_URL=http://localhost:3001
APP_URL=http://localhost:3000

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_SERVICE_ACCOUNT_PATH=./keys/firebase-service-account.json

# Email Service
EMAIL_SERVICE=smtp
# Options: smtp, sendgrid, mailgun, ses
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@shira.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,https://shira.com
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=10000

# Content Moderation
CONTENT_MODERATION_ENABLED=true
AWS_REKOGNITION_MIN_CONFIDENCE=90

# Feature Flags
FEATURE_OFFLINE_DOWNLOADS=true
FEATURE_FAMILY_SHARING=false
FEATURE_LIVE_STREAMING=false

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_change_in_production
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# External APIs
TMDB_API_KEY=your_tmdb_api_key
IMDB_API_KEY=your_imdb_api_key

# Monitoring & Observability
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# ElasticSearch (Search & Discovery)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=shira

# RabbitMQ / Kafka (Message Queue)
RABBITMQ_URL=amqp://localhost:5672
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=shira-backend

# Admin Panel
ADMIN_EMAIL=admin@shira.com
ADMIN_PASSWORD_HASH=
CMS_SECRET_KEY=your_cms_secret_key
